<Window x:Class="SalesManagementSystem.WPF.CategoryView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:SalesManagementSystem.BusinessLogic"
        Title="Category Management" Height="400" Width="600">
    <Grid>
        <StackPanel Orientation="Horizontal" Margin="10">
            <TextBlock Text="Search:" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <TextBox Width="200" Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" />
        </StackPanel>
        <DataGrid ItemsSource="{Binding Categories}" SelectedItem="{Binding SelectedCategory}" AutoGenerateColumns="False" Margin="10,40,10,50">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding CategoryId}" Width="50"/>
                <DataGridTextColumn Header="Name" Binding="{Binding CategoryName}" Width="150"/>
                <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="200"/>
            </DataGrid.Columns>
        </DataGrid>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="10">
            <Button Content="Add" Width="80" Margin="5" Click="AddCategory_Click"/>
            <Button Content="Edit" Width="80" Margin="5" Click="EditCategory_Click"/>
            <Button Content="Delete" Width="80" Margin="5" Click="DeleteCategory_Click"/>
        </StackPanel>
    </Grid>
</Window>

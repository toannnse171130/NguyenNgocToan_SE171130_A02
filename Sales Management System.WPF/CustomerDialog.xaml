<Window x:Class="SalesManagementSystem.WPF.CustomerDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Customer Details" Height="254" Width="300">
    <Grid Margin="10,10,10,74">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Company Name:" Grid.Row="0"/>
        <TextBox Text="{Binding CompanyName, UpdateSourceTrigger=PropertyChanged}" Grid.Row="0" Margin="120,0,0,0"/>
        <TextBlock Text="Contact Name:" Grid.Row="1"/>
        <TextBox Text="{Binding ContactName, UpdateSourceTrigger=PropertyChanged}" Grid.Row="1" Margin="120,0,0,0"/>
        <TextBlock Text="Phone:" Grid.Row="2"/>
        <TextBox Text="{Binding Phone, UpdateSourceTrigger=PropertyChanged}" Grid.Row="2" Margin="120,0,0,0"/>
        <TextBlock Text="Address:" Grid.Row="3"/>
        <TextBox Text="{Binding Address, UpdateSourceTrigger=PropertyChanged}" Grid.Row="3" Margin="120,0,0,0"/>
        <StackPanel Orientation="Horizontal" Grid.Row="4" HorizontalAlignment="Right" Margin="0,10,0,-1">
            <Button Content="Save" Width="80" Margin="5" Click="Save_Click" Height="35"/>
            <Button Content="Cancel" Width="80" Margin="5" Click="Cancel_Click" Height="35"/>
        </StackPanel>
    </Grid>
</Window>

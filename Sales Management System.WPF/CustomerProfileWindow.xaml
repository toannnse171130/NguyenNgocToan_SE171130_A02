<Window x:Class="SalesManagementSystem.WPF.CustomerProfileWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Customer Profile" Height="500" Width="600">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Personal Information" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Company Name:" Width="120"/>
                <TextBlock x:Name="CompanyNameText"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Contact Name:" Width="120"/>
                <TextBlock x:Name="ContactNameText"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Phone:" Width="120"/>
                <TextBlock x:Name="PhoneText"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Address:" Width="120"/>
                <TextBlock x:Name="AddressText"/>
            </StackPanel>
            <Button Content="Update Info" Width="120" Margin="0,10,0,10" Click="UpdateInfo_Click"/>
            <TextBlock Text="Order History" FontWeight="Bold" FontSize="16" Margin="0,20,0,10"/>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBox x:Name="OrderSearchBox" Width="200" Margin="0,0,10,0"/>
                <Button Content="Search" Width="80" Click="OrderSearch_Click"/>
                <Button Content="Clear" Width="80" Margin="10,0,0,0" Click="OrderSearchClear_Click"/>
            </StackPanel>
            <DataGrid x:Name="OrderHistoryGrid" AutoGenerateColumns="False" Height="250">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Order ID" Binding="{Binding OrderId}" Width="140"/>
                    <DataGridTextColumn Header="Order Date" Binding="{Binding OrderDate}" Width="*"/>
                    <DataGridTextColumn Header="Total" Binding="{Binding Total}" Width="100"/>
                </DataGrid.Columns>
            </DataGrid>
            <Button Content="Logout" Width="100" Margin="0,10,0,0" Click="Logout_Click" HorizontalAlignment="Right"/>
        </StackPanel>
    </Grid>
</Window> 
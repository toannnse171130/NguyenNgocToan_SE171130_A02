<Window x:Class="SalesManagementSystem.WPF.EmployeeView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:SalesManagementSystem.BusinessLogic"
        Title="Employee Management" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Horizontal" Margin="10">
            <TextBlock Text="Search:" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <TextBox Width="200" Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" />
        </StackPanel>
        <DataGrid ItemsSource="{Binding Employees}" SelectedItem="{Binding SelectedEmployee}" AutoGenerateColumns="False" Margin="10,40,10,50">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding EmployeeId}" Width="50"/>
                <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="120"/>
                <DataGridTextColumn Header="UserName" Binding="{Binding UserName}" Width="100"/>
                <DataGridTextColumn Header="Title" Binding="{Binding JobTitle}" Width="100"/>
                <DataGridTextColumn Header="Birth Date" Binding="{Binding BirthDate}" Width="100"/>
                <DataGridTextColumn Header="Hire Date" Binding="{Binding HireDate}" Width="100"/>
                <DataGridTextColumn Header="Address" Binding="{Binding Address}" Width="200"/>
            </DataGrid.Columns>
        </DataGrid>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="10">
            <Button Content="Add" Width="80" Margin="5" Click="AddEmployee_Click"/>
            <Button Content="Edit" Width="80" Margin="5" Click="EditEmployee_Click"/>
            <Button Content="Delete" Width="80" Margin="5" Click="DeleteEmployee_Click"/>
        </StackPanel>
    </Grid>
</Window>

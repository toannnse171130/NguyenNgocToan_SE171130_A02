<Window x:Class="SalesManagementSystem.WPF.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="350" Width="400">
    <Grid>
        <TabControl>
            <TabItem Header="Employee/Admin">
                <StackPanel Margin="20">
                    <TextBlock Text="User Name:"/>
                    <TextBox x:Name="EmployeeUserNameBox" Margin="0,5,0,10"/>
                    <TextBlock Text="Password:"/>
                    <PasswordBox x:Name="EmployeePasswordBox" Margin="0,5,0,20"/>
                    <Button Content="Login" Width="100" HorizontalAlignment="Center" Click="EmployeeLogin_Click"/>
                </StackPanel>
            </TabItem>
            <TabItem Header="Customer">
                <StackPanel Margin="20">
                    <TextBlock Text="Phone Number:"/>
                    <TextBox x:Name="CustomerPhoneBox" Margin="0,5,0,20"/>
                    <Button Content="Login" Width="100" HorizontalAlignment="Center" Click="CustomerLogin_Click"/>
                </StackPanel>
            </TabItem>
        </TabControl>
    </Grid>
</Window> 
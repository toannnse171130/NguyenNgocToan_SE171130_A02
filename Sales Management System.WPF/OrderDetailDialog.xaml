<Window x:Class="SalesManagementSystem.WPF.OrderDetailDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Order Detail" Height="225" Width="350">
    <Grid Margin="10,10,10,61">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Product:" Grid.Row="0"/>
        <TextBox Text="{Binding Product.ProductName, UpdateSourceTrigger=PropertyChanged}" Grid.Row="0" Margin="120,0,0,0"/>
        <TextBlock Text="Unit Price:" Grid.Row="1"/>
        <TextBox Text="{Binding UnitPrice, UpdateSourceTrigger=PropertyChanged}" Grid.Row="1" Margin="120,0,0,0"/>
        <TextBlock Text="Quantity:" Grid.Row="2"/>
        <TextBox Text="{Binding Quantity, UpdateSourceTrigger=PropertyChanged}" Grid.Row="2" Margin="120,0,0,0"/>
        <TextBlock Text="Discount:" Grid.Row="3"/>
        <TextBox Text="{Binding Discount, UpdateSourceTrigger=PropertyChanged}" Grid.Row="3" Margin="120,0,0,0"/>
        <StackPanel Orientation="Horizontal" Grid.Row="4" HorizontalAlignment="Right" Margin="0,10,15,0">
            <Button Content="Save" Width="80" Margin="5" Click="Save_Click" Height="35"/>
            <Button Content="Cancel" Width="80" Margin="5" Click="Cancel_Click" Height="35"/>
        </StackPanel>
    </Grid>
</Window>

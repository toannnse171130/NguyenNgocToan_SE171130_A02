<Window x:Class="SalesManagementSystem.WPF.OrderDetailView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:SalesManagementSystem.BusinessLogic"
        Title="Order Detail Management" Height="400" Width="700">
    <Grid>
        <DataGrid ItemsSource="{Binding OrderDetails}" SelectedItem="{Binding SelectedOrderDetail}" AutoGenerateColumns="False" Margin="10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Order ID" Binding="{Binding OrderId}" Width="80"/>
                <DataGridTextColumn Header="Product" Binding="{Binding Product.ProductName}" Width="150"/>
                <DataGridTextColumn Header="Unit Price" Binding="{Binding UnitPrice}" Width="100"/>
                <DataGridTextColumn Header="Quantity" Binding="{Binding Quantity}" Width="80"/>
                <DataGridTextColumn Header="Discount" Binding="{Binding Discount}" Width="80"/>
            </DataGrid.Columns>
        </DataGrid>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="10">
            <Button Content="Add" Width="80" Margin="5" Click="AddOrderDetail_Click"/>
            <Button Content="Edit" Width="80" Margin="5" Click="EditOrderDetail_Click"/>
            <Button Content="Delete" Width="80" Margin="5" Click="DeleteOrderDetail_Click"/>
        </StackPanel>
    </Grid>
</Window>

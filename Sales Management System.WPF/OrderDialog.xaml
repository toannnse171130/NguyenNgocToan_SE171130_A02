<Window x:Class="SalesManagementSystem.WPF.OrderDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Order Details" Height="249" Width="400">
    <Grid Margin="30,10,10,107">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Customer:" Grid.Row="0"/>
        <TextBox Text="{Binding Customer.CompanyName, UpdateSourceTrigger=PropertyChanged}" Grid.Row="0" Margin="120,0,0,0"/>
        <TextBlock Text="Employee:" Grid.Row="1"/>
        <TextBox Text="{Binding Employee.Name, UpdateSourceTrigger=PropertyChanged}" Grid.Row="1" Margin="120,0,0,0"/>
        <TextBlock Text="Order Date:" Grid.Row="2"/>
        <TextBox Text="{Binding OrderDate, UpdateSourceTrigger=PropertyChanged}" Grid.Row="2" Margin="120,0,0,0"/>
        <StackPanel Orientation="Horizontal" Grid.Row="4" HorizontalAlignment="Right" Margin="0,10,30,0">
            <Button Content="Save" Width="80" Margin="5" Click="Save_Click" Height="40"/>
            <Button Content="Cancel" Width="80" Margin="5" Click="Cancel_Click" Height="41"/>
        </StackPanel>
    </Grid>
</Window>

<Window x:Class="SalesManagementSystem.WPF.ProductDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Product Details" Height="201" Width="400">
    <Grid Margin="10,10,10,22">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Product Name:" Grid.Row="0"/>
        <TextBox Text="{Binding ProductName, UpdateSourceTrigger=PropertyChanged}" Grid.Row="0" Margin="120,0,0,0"/>
        <TextBlock Text="Unit Price:" Grid.Row="1"/>
        <TextBox Text="{Binding UnitPrice, UpdateSourceTrigger=PropertyChanged}" Grid.Row="1" Margin="120,0,0,0"/>
        <TextBlock Text="Units In Stock:" Grid.Row="2"/>
        <TextBox Text="{Binding UnitsInStock, UpdateSourceTrigger=PropertyChanged}" Grid.Row="2" Margin="120,0,0,0"/>
        <TextBlock Text="Category:" Grid.Row="3"/>
        <ComboBox ItemsSource="{Binding Categories}" SelectedItem="{Binding SelectedCategory}" DisplayMemberPath="CategoryName" Grid.Row="3" Margin="120,0,0,0"/>
        <StackPanel Orientation="Horizontal" Grid.Row="3" HorizontalAlignment="Right" Margin="0,21,23,9" Grid.RowSpan="2">
            <Button Content="Save" Width="80" Margin="5" Click="Save_Click" Height="42"/>
            <Button Content="Cancel" Width="80" Margin="5" Click="Cancel_Click" Height="41"/>
        </StackPanel>
    </Grid>
</Window>

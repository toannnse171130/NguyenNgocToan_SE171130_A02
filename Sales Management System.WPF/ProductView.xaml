<Window x:Class="SalesManagementSystem.WPF.ProductView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:SalesManagementSystem.BusinessLogic"
        Title="Product Management" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Horizontal" Margin="10">
            <TextBlock Text="Search:" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <TextBox Width="200" Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" />
        </StackPanel>
        <DataGrid ItemsSource="{Binding Products}" SelectedItem="{Binding SelectedProduct}" AutoGenerateColumns="False" Margin="10,40,10,50">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding ProductId}" Width="50"/>
                <DataGridTextColumn Header="Name" Binding="{Binding ProductName}" Width="150"/>
                <DataGridTextColumn Header="Unit Price" Binding="{Binding UnitPrice}" Width="100"/>
                <DataGridTextColumn Header="Stock" Binding="{Binding UnitsInStock}" Width="80"/>
                <DataGridTextColumn Header="Category" Binding="{Binding Category.CategoryName}" Width="120"/>
            </DataGrid.Columns>
        </DataGrid>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="10">
            <Button Content="Add" Width="80" Margin="5" Click="AddProduct_Click"/>
            <Button Content="Edit" Width="80" Margin="5" Click="EditProduct_Click"/>
            <Button Content="Delete" Width="80" Margin="5" Click="DeleteProduct_Click"/>
        </StackPanel>
    </Grid>
</Window>

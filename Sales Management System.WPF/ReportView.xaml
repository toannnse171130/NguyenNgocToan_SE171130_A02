<Window x:Class="SalesManagementSystem.WPF.ReportView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sales Report" Height="400" Width="600">
    <Grid>
        <StackPanel Orientation="Horizontal" Margin="10">
            <TextBlock Text="Start Date:" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <DatePicker x:Name="StartDatePicker" Width="120"/>
            <TextBlock Text="End Date:" VerticalAlignment="Center" Margin="10,0,5,0"/>
            <DatePicker x:Name="EndDatePicker" Width="120"/>
            <Button Content="Generate Report" Width="120" Margin="10,0,0,0" Click="GenerateReport_Click"/>
        </StackPanel>
        <DataGrid x:Name="OrdersDataGrid" AutoGenerateColumns="False" Margin="10,50,10,10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Order ID" Binding="{Binding OrderId}" Width="80"/>
                <DataGridTextColumn Header="Customer" Binding="{Binding Customer.CompanyName}" Width="150"/>
                <DataGridTextColumn Header="Order Date" Binding="{Binding OrderDate}" Width="120"/>
                <DataGridTextColumn Header="Total" Binding="{Binding Total}" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>
        <TextBlock x:Name="TotalSalesText" FontWeight="Bold" FontSize="16" HorizontalAlignment="Right" Margin="10"/>
    </Grid>
</Window>
